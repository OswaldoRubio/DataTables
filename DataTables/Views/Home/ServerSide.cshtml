@{
    ViewBag.Title = "Server Side";
}

<div class="row p-2" style="margin-bottom: 15px;">
    <div class="alert alert-success w-100" role="alert">
        Server Side Table
    </div>

    <div class="table-responsive">
        <table id="example1" class="table table-striped table-hover w-100">
            <thead>
                <tr>
                    <th></th>
                    <th>User ID</th>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Completed</th>
                </tr>
            </thead>
        </table>
    </div>

</div>

<script type="text/javascript">

    function format(d) {
        return 'Title: ' + d.title + '<br/><br/>' +
            'The child row can contain any data you wish, including links, images, inner tables etc.';
    }

    $(document).ready(function () {
        var dt = $('#example1').DataTable({
            processing: true,
            serverSide: true,
            ajax: {
                url: "/Home/GetTODOs",
                method: "GET"
            },
            createdRow: function (row, data, dataIndex, cells) {
                $(row).attr("id", data.id)

                //if (data.completed === true) {
                //    $(row).addClass('done');
                //} else {
                //    $(row).addClass('pending');
                //}
            },
            columns: [
                {
                    "class": "details-control",
                    "orderable": false,
                    "data": null,
                    "defaultContent": '<i class="fas fa-plus-circle text-info"></i>'
                },
                { data: 'userId' },
                { data: 'id' },
                { data: 'title' },
                {
                    data: 'completed',
                    render: function (data, type, row) {
                        if (data === true) {
                            return '<i class="fas fa-check text-success"></i>'
                        }
                        else
                        {
                            return '<i class="fas fa-times text-danger"></i>'
                        }

                    }
                }
            ],
            "order": [[1, 'asc']]
        });

        var detailRows = [];

        $('#example1 tbody').on('click', 'tr td.details-control', function () {
            var tr = $(this).closest('tr');
            var row = dt.row(tr);
            var idx = $.inArray(tr.attr('id'), detailRows);

            if (row.child.isShown()) {
                tr.removeClass('details');
                row.child.hide();

                // Remove from the 'open' array
                detailRows.splice(idx, 1);
            }
            else {
                tr.addClass('details');
                row.child(format(row.data())).show();

                // Add to the 'open' array
                if (idx === -1) {
                    detailRows.push(tr.attr('id'));
                }
            }
        });

        // On each draw, loop over the `detailRows` array and show any child rows
        dt.on('draw', function () {
            $.each(detailRows, function (i, id) {
                $('#' + id + ' td.details-control').trigger('click');
            });
        });

    });
</script>